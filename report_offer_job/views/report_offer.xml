<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="report_offer_tree" model="ir.ui.view">
            <field name="name">report.job.offer.tree</field>
            <field name="model">report.job.offer</field>
            <field name="arch" type="xml">
                <tree string="Job Offer Report" editable="bottom" create="0">
                    <field name="hiring"/>
                    <field name="client"/>
                    <field name="job_title"/>
                    <field name="location"/>
                    <field name="offer_date"/>
                    <field name="name"/>
                    <field name="package_salary"/>
                    <field name="basic"/>
                    <field name="housing"/>
                    <field name="transportation"/>
                </tree>
            </field>
        </record>
        <record id="report_offer_kanban" model="ir.ui.view">
            <field name="name">report.job.offer.kanban</field>
            <field name="model">report.job.offer</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">


                                <div class="oe_kanban_details d-flex flex-column">
                                    <strong class="o_kanban_record_title oe_partner_heading">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                    <ul>
                                        <li>
                                            <field name="offer_job_title"/>
                                        </li>
                                        <li>
                                            <field name="client"/>
                                        </li>
                                        <li>
                                            <field name="hiring"/>
                                        </li>


                                    </ul>

                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="report_offer_action" model="ir.actions.act_window">
            <field name="name">Report Offer</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">report.job.offer</field>
            <field name="view_mode">tree,kanban</field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="report_offer_menu" name="Job Offer Report" parent="hr_recruitment.report_hr_recruitment"
                  action="report_offer_action" sequence="5"/>
    </data>
</odoo>
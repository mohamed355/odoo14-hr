<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="report_technical_tree" model="ir.ui.view">
            <field name="name">report.technical.app.tree</field>
            <field name="model">report.technical.app</field>
            <field name="arch" type="xml">
                <tree string="Report" editable="bottom" create="0">
                    <field name="hiring"/>
                    <field name="client"/>
                    <field name="job_title"/>
                    <field name="location"/>
                    <field name="serial"/>
                    <field name="name"/>
                    <field name="notice_period_from"/>
                    <field name="notice_period_to"/>
                    <field name="current_salary"/>
                    <field name="ex_salary"/>
                    <field name="can_loc"/>
                    <field name="can_na"/>
                    <field name="interview_date" />
                    <field name="assign_to" />
                    <field name="interview" />
                    <field name="stage" string="Last Activity"/>
                    <field name="notes"/>
<!--                    <field name="interview_date" t-options="{'format': 'HH:mm'}" string="Time"/>-->
                </tree>
            </field>
        </record>
        <record id="report_technical_action" model="ir.actions.act_window">
            <field name="name">Report Technical</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">report.technical.app</field>
            <field name="view_mode">tree</field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="report_technical_menu" name="Report Technical" parent="hr_recruitment.menu_hr_recruitment_root" action="report_technical_action" sequence="5"/>
    </data>
</odoo>
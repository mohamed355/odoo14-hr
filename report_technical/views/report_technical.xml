<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="report_technical_tree" model="ir.ui.view">
            <field name="name">report.technical.app.tree</field>
            <field name="model">report.technical.app</field>
            <field name="arch" type="xml">
                <tree string="Report" editable="bottom" create="0">
                    <field name="hiring"/>
                    <field name="client"/>
                    <field name="job_title"/>
                    <field name="location"/>
                    <field name="serial"/>
                    <field name="name"/>
                    <field name="notice_period_from"/>
                    <field name="notice_period_to"/>
                    <field name="current_salary"/>
                    <field name="ex_salary"/>
                    <field name="can_loc"/>
                    <field name="can_na"/>
                    <field name="interview_date"/>
                    <field name="assign_to"/>
                    <field name="interview"/>
                    <field name="stage" string="Last Activity"/>
                    <field name="notes"/>
                    <!--                    <field name="interview_date" t-options="{'format': 'HH:mm'}" string="Time"/>-->
                </tree>
            </field>
        </record>
        <record id="report_technical_kanban" model="ir.ui.view">
            <field name="name">report.technical.app.kanban</field>
            <field name="model">report.technical.app</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">


                                <div class="oe_kanban_details d-flex flex-column">
                                    <strong class="o_kanban_record_title oe_partner_heading">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                    <ul>
                                        <li>
                                            <field name="job_title"/>
                                        </li>
                                        <li>
                                            <field name="client"/>
                                        </li>
                                        <li>
                                            <field name="hiring"/>
                                        </li>
                                        <li>
                                            <field name="serial"/>
                                        </li>
                                        <li class="o_text_overflow">
                                            <field name="stage"/>
                                        </li>
                                    </ul>

                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="report_technical_action" model="ir.actions.act_window">
            <field name="name">Report Technical</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">report.technical.app</field>
            <field name="view_mode">tree,kanban</field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="report_technical_menu" name="Report Technical" parent="hr_recruitment.menu_hr_recruitment_root"
                  action="report_technical_action" sequence="5"/>
    </data>
</odoo>
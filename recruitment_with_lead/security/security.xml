<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr.group_hr_user" model="res.groups">
            <field name="name">Sourcer</field>
            <field name="category_id" ref="base.module_category_human_resources_employees"/>
            <field name="implied_ids" eval="[(6, 0, [ref('base.group_private_addresses'), ref('base.group_user')])]"/>
            <field name="comment">The user will be able to approve document created by employees.</field>
        </record>
        <record id="hr.group_hr_manager" model="res.groups">
            <field name="name">Admin</field>
            <field name="comment">The user will have access to the human resources configuration as well as statistic
                reports.
            </field>
            <field name="category_id" ref="base.module_category_human_resources_employees"/>
            <field name="implied_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        <record id="group_hr_senior" model="res.groups">
            <field name="name">Senior</field>
            <field name="category_id" ref="base.module_category_human_resources_employees"/>
<!--            <field name="implied_ids" eval="[(4, ref('group_hr_user'))]"/>-->
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        <record id="group_hr_man" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="base.module_category_human_resources_employees"/>
<!--            <field name="implied_ids" eval="[(4, ref('group_hr_user'))]"/>-->
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>


    </data>
</odoo>
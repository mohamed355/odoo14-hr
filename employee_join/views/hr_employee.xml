<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_employee_form" model="ir.ui.view">
            <field name="name">hr_employee_form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">

                <xpath expr="//header" position="inside">
                    <field name="joined" invisible="1"/>
                    <button name="join" type="object" string="Accounting Info" attrs="{'invisible': [('joined', '=', True)]}"/>
                    <button name="emp_conf" type="object" string="Join" attrs="{'invisible': [('state', '=', 'joined')]}"/>
                    <field name="state" widget="statusbar"/>
                </xpath>

            </field>
        </record>


    </data>
</odoo>
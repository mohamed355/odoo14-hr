                    <field name="requested"/>
                    <field name="department_id"/>
                    <field name="new_opp"/>

                    <field name="awaiting_review"/>
                    <field name="reviewed"/>

                    <field name="offered"/>
                    <field name="stage_id"/>
                    <field name="note"/>
                    <field name="approved"/>


                </tree>
            </field>
        </record>

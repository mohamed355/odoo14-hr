<odoo>
    <data>
        <record id="hiring_request_form_inherit" model="ir.ui.view">
            <field name="name">hiring_request_form_inherit</field>
            <field name="model">hiring.request</field>
            <field name="inherit_id" ref="rawafd_hiring_request.hiring_request_form"/>
            <field name="arch" type="xml">

                <xpath expr="//sheet" position="inside">
                    <field name="job_id" invisible="1"/>
                    <notebook>
                        <page string="Applications">
                            <group>
                                <field name="application_ids">
                                    <tree editable="bottom">
                                                            <field name="job_id" invisible="1"/>
                                                            <field name="company_id" invisible="1"/>

                                        <field name="app_code"/>
                                        <field name="partner_name"/>
                                        <field name="approve_date"/>
                                        <field name="stage_id"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Users">
                            <group>
                                <field name="user_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="approve_date"/>
                                        <field name="unapprove_date"/>

                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </xpath>

            </field>
        </record>


        <record id="hiring_request_tree_inherit" model="ir.ui.view">
            <field name="name">hiring_request_tree_inherit</field>
            <field name="model">hiring.request</field>
            <field name="inherit_id" ref="rawafd_hiring_request.hiring_request_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='stage_id']" position="after">
                    <field name="user_ids" widget="many2many_tags"/>
<!--                    <field name="application_ids" widget="many2many_tags"/>-->
                </xpath>

            </field>
        </record>

        <record id="crm_case_tree_view_job_inherit" model="ir.ui.view">
            <field name="name">crm_case_tree_view_job_inherit</field>
            <field name="model">hr.applicant</field>
            <field name="inherit_id" ref="hr_recruitment.crm_case_tree_view_job"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='priority']" position="after">
                    <field name="hiring_ids" widget="many2many_tags"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>